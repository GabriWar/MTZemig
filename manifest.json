{
  "manifest_version": 3,
  "name": "MTZemig",
  "version": "1.0",
  "description": "Gerenciador de contas Cemig para clientes MTZ.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://atende.cemig.com.br/*",
    "https://www.atendimento.cemig.com.br/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://atende.cemig.com.br/*",
        "https://www.atendimento.cemig.com.br/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://atende.cemig.com.br/*",
        "https://www.atendimento.cemig.com.br/*"
      ],
      "js": [
        "interceptor.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "interceptor.js",
        "template.fodt"
      ],
      "matches": [
        "https://www.atendimento.cemig.com.br/*",
        "https://atende.cemig.com.br/*",
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}